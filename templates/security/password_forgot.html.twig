{% extends 'base/_layout_security.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
    <div class="container-login100">
        <div class="wrap-login100">
            <form action="{{ path('passworg_forgot') }}" method="post" class="login100-form validate-form">
                <img src="{{ asset('assets/img/logo.png') }}" class="login100-form-logo" width="125px"><br>
                <span class="login100-form-title p-b-43">
                    Saisir l'email pour la réinitialisation
                </span>
                <div class="sub-forgot-pass"></div>
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}
                <div style="background-color: white" class="wrap-input100 validate-input" data-validate="Email is required">
                    <input class="input100" type="email" name="email">
                    <span class="focus-input100"></span>
                    <span class="label-input100">Email</span>
                </div>
                <div class="container-login100-form-btn">
                    <button class="login100-form-btn">
                        Valider
                    </button>
                </div>
            </form>
            <div class="login100-more">
                <h4>STUDENPRO</h4>
                <h4 class="mt-4">FAIRE TRAITER VOS DEVOIR PAR DES SPÉCIALISTES.</h4>
                <div class="d-flex justify-content-center align-items-center mt-5">
                    <h5>
                        Toutes les matières du collège à l'université
                    </h5>
                </div>
                <div class="login100-more-footer">
                    <p>Pour toute question, contactez nous sur:</p>
                    <a href="mailto:contact@student.fr">contact@student.fr</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
