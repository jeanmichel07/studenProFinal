{% extends 'layout.html.twig' %}

{% block title %}Payment!{% endblock %}

{% block body %}
    <form method="post">
        <div id="errors"></div>
        <input id="cardholder-name" type="text" placeholder="Titulaire de la carte">
        <div id="card-element">
        </div>
        <div id="card-errors" role="alert"></div>
        <button id="card-button" type="button" data-secret="{{ key }}">Valider le paiement</button>
    </form>

    {% block javascripts %}
        <script src="https://js.stripe.com/v3/"></script>
        <script src="/assets/js/stripe.js"></script>
    {% endblock %}
{% endblock %}